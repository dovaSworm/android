<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="Welcome to fragment 1!"
        android:textSize="25sp"
        android:layout_marginTop="40dp"
        />
    <Button
        android:id="@+id/btnGoToF1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Go To Fragment 1"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView"/>
    <Button
        android:id="@+id/btnGoToF2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Go To Fragment 2"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnGoToF1"/>
    <Button
        android:id="@+id/btnGoToF3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Go To Fragment 3"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnGoToF2"/>
    <Button
        android:id="@+id/btnGoToSecondActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Go To Second Activity"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnGoToF3"/>

</RelativeLayout>